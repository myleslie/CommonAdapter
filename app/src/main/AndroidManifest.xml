<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.classic.adapter.simple">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ListViewSimpleActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activity.ListViewActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activity.RecyclerViewSimpleActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activity.RecyclerViewActivity"
            android:screenOrientation="portrait"
            />
    </application>


</manifest>
